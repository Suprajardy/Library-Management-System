    private void rSMaterialButtonCircle2MouseClicked(java.awt.event.MouseEvent evt) {                                                     
        if(date_fromDate.getDatoFecha() != null && date_toDate.getDatoFecha() != null){
        clearTable();
        search();
        }
        else{
            JOptionPane.showMessageDialog(this, "Please select a Date");
        }
    }                                                    

